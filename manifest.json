{
  "manifest_version": 2,

  "name": "Themes for Messenger",
  "description": "Saving your eyes",
  "version": "0.0.1.0",
  "author": "Linus Zhu",

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Themes for Messenger"
  },

  "background": {
      "scripts": ["themes.js"],
      "persistent": false
      },

  "content_scripts": [
    {
      "matches": ["https://*.facebook.com/*", "https://*.messenger.com/*"],
      "js": ["themes.js", "jscolor.js"],
      "run_at": "document_end"
    }
  ],

  "permissions": [
    "activeTab"
  ],

  "options_ui": {
      "page":"popup.html",
      "open_in_tab":false
  }
}
